<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--标题文本的style-->
    <style name="titleTvStyle">
        <item name="android:textColor">@color/fontBlack</item>
        <item name="android:textSize">@dimen/common_font_big_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseSwitcher">
        <item name="switcher_width">@dimen/switcher_width</item>
        <item name="switcher_height">@dimen/switcher_height</item>
        <item name="switcher_on_color">@color/switcher_on_color</item>
        <item name="switcher_off_color">@color/switcher_off_color</item>
        <item name="switcher_icon_color">@color/switcher_icon_color</item>
        <item name="elevation">@dimen/switcher_elevation</item>
    </style>

    <style name="MotionSwitcher" parent="BaseSwitcher"/>
</resources>
